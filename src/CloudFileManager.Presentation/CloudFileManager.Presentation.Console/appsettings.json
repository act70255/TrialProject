{
  "_comment": "設定檔說明：若要將 xml 指令輸出成檔案，請把 Output.XmlTarget 設為 File。",
  "ConfigVersion": "1.0",
  "Storage": {
    "StorageRootPath": "./samples/mvp/storage"
  },
  "Database": {
    "Provider": "Sqlite",
    "MigrateOnStartup": true,
    "ConnectionStrings": {
      "Sqlite": "Data Source=./samples/mvp/data/cloud-file-manager.sample.db",
      "SqlServer": "Server=localhost;Database=CloudFileManager;User Id=sa;Password=Your_password123;TrustServerCertificate=true"
    }
  },
  "Logging": {
    "Level": "Info",
    "EnableTraverseLog": true
  },
  "Output": {
    "_comment": "XmlTarget=Console 只顯示在終端機；XmlTarget=File 會寫入 XmlOutputPath 並自動建立目錄。",
    "XmlTarget": "File",
    "XmlOutputPath": "./samples/mvp/output/tree.xml"
  },
  "AllowedExtensions": {
    "Word": [ ".docx" ],
    "Image": [ ".png", ".jpg", ".jpeg" ],
    "Text": [ ".txt" ]
  },
  "Management": {
    "FileConflictPolicy": "Reject",
    "DirectoryDeletePolicy": "ForbidNonEmpty",
    "MaxUploadSizeBytes": 10485760,
    "EnableAuditLog": true
  }
}
