{
  "_comment": "設定檔說明：若要將 xml 指令輸出成檔案，請把 Output.XmlTarget 設為 File。",
  "ConfigVersion": "1.0",
  "UseSwagger": true,
  "Storage": {
    "StorageRootPath": "./samples/mvp/storage"
  },
  "Database": {
    "Provider": "Sqlite",
    "MigrateOnStartup": true,
    "ConnectionStrings": {
      "Sqlite": "Data Source=./samples/mvp/data/cloud-file-manager.sample.db",
      "SqlServer": "Server=localhost;Database=CloudFileManager;User Id=sa;Password=Your_password123;TrustServerCertificate=true"
    }
  },
  "Logging": {
    "Level": "Info",
    "EnableTraverseLog": true
  },
  "Output": {
    "_comment": "XmlTarget=Console 只回傳字串；XmlTarget=File 會寫入 XmlOutputPath 並自動建立目錄。",
    "XmlTarget": "File",
    "XmlOutputPath": "./samples/mvp/output/tree.xml"
  },
  "AllowedExtensions": {
    "Word": [ ".docx" ],
    "Image": [ ".png", ".jpg", ".jpeg" ],
    "Text": [ ".txt" ]
  },
  "Management": {
    "FileConflictPolicy": "Reject",
    "DirectoryDeletePolicy": "ForbidNonEmpty",
    "MaxUploadSizeBytes": 10485760,
    "EnableAuditLog": true
  },
  "ApiSecurity": {
    "_comment": "內網驗收可啟用 SwaggerAutoAuthorize 自動帶入 API Key；對外環境建議關閉。",
    "_comment_SwaggerAutoAuthorize": "true: Swagger 啟動即自動授權；false: 需手動按 Authorize 輸入 API Key。",
    "HeaderName": "X-Api-Key",
    "ApiKey": "dev-local-api-key",
    "SwaggerAutoAuthorize": true
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5189",
      "https://localhost:7206",
      "http://localhost:5190"
    ]
  },
  "AllowedHosts": "*"
}
